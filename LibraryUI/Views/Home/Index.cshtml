@model LibraryUI.Models.HistoriesViewModel
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-md-4">
        <div class="panel-default">
            <div class="panel-body">
                <h3>Hi, @Session["FullName"]</h3>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered maintable" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Book</th>
                            <th>Date Receiving</th>
                            <th>Return Date</th>
                            <th>Return Book</th>
                        </tr>
                    </thead>
                    <tbody class="table-striped">
                        @{ int npp = 0; }
                        @foreach (var item in @Model.Histories)
                        {
                            npp++;
                            var returnDate = item.ReturnDate?.ToString("dd.MM.yyyy");
                            <tr>
                                <td>@npp</td>
                                <td>@item.Book.Name</td>
                                <td>@item.DateReceiving.ToString("dd.MM.yyyy")</td>
                                <td>@returnDate</td>
                                <td>
                                    @Html.ActionLink("Return", "Return", new { historyId = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>