@model LibraryUI.Models.HistoriesViewModel
@{
    ViewBag.Title = "Book History";
}

<div class="row">
    <div class="col-md-4">
        <div class="panel-default">
            <div class="panel-body">
                <h3>@ViewBag.Book</h3>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered maintable" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>User</th>
                            <th>Date Receiving</th>
                            <th>Return Date</th>
                        </tr>
                    </thead>
                    <tbody class="table-striped">
                        @{ int npp = 0; }
                        @foreach (var item in @Model.Histories)
                        {
                            npp++;
                            var returnDate = item.ReturnDate?.ToString("dd.MM.yyyy");
                            <tr>
                                <td>@npp</td>
                                <td>@item.User.FullName</td>
                                <td>@item.DateReceiving.ToString("dd.MM.yyyy")</td>
                                <td>@returnDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <div class="form-group">
            <div class="col-md-12">
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-md btn-default btn-block", role = "button" })
            </div>
        </div>
    </div>
</div>