@model LibraryUI.Models.BookViewModel
@{
    ViewBag.Title = "Give Book";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        <h5>Do you want to take a book?</h5>
                        <h2>@Model.Name</h2>
                    </div>
                </div>
            </div>
        </div>
        <div>
            @using (Html.BeginForm())
            {
                <div class="row">
                    <input type="hidden" name="Id" readonly value="@Model.Id">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-md btn-default btn-block", role = "button" })
                            </div>
                            <div class="col-md-6">
                                <button type="submit" name="Give" class="btn btn-md btn-success btn-block">Give</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>