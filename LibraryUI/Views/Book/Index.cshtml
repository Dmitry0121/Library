@model LibraryUI.Models.BooksViewModel
@{
    ViewBag.Title = "Books";
}

<div class="row">
    <div class="col-md-4">
        <div class="panel-default">
            <div class="panel-body">
                <h3>Books</h3>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered maintable" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Name</th>
                            <th>Authors</th>
                            <th>Give</th>
                        </tr>
                    </thead>
                    <tbody class="table-striped">
                        @{ int npp = 0; }
                        @foreach (var item in @Model.Books)
                        {
                            npp++;
                            <tr>
                                <td>@npp</td>
                                <td>@Html.ActionLink(item.Name, "BookHistory", new { bookId = item.Id })</td>
                                <td>@item.AllAuthors</td>
                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        @Html.ActionLink("Give", "Give", new { bookId = item.Id })
                                    }
                                    else
                                    {
                                        <p>Not available</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>